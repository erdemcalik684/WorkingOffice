@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Index";
}
<h2>Categories</h2>
<a class="btn btn-primary mb-3" asp-controller="Categories" asp-action="Create">Create</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>

            <td>@item.Name</td>
            <td>
                <a class="btn btn-warning btn-xs" asp-controller="Categories" asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a class="btn btn-danger btn-xs" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
