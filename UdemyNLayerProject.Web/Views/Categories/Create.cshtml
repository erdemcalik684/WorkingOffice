@model CategoryDto
@{
    ViewData["Title"] = "Create";
}

<h1>New Category</h1>
<div class="row">
    <div class="col-lg-4">
        <form method="post" asp-action="Create">
            @*Sadece Modelden gelen hatalar gösterilir.
                Textboxtan gelen hatalar textboxın altında görünecek.*@
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary btn-xs" />
            </div>
        </form>
    </div>
</div>



